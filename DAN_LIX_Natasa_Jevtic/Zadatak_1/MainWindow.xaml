        <Button Grid.Row="1" 
                Grid.Column="0" 
                IsEnabled="{Binding isSelectable}" 
                DataContext="{Binding CardCollection[0]}" 
                Click="Slide_Clicked">
            <Button.Template>
                <ControlTemplate>
                    <Image Stretch="Fill" Source="{Binding CardImage}" />                    
                </ControlTemplate>
            </Button.Template>
        </Button>

